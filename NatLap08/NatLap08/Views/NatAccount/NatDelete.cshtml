@model NatLap08.Models.NatAccount

@{
    ViewData["Title"] = "Xóa tài khoản";
}

<h2 class="text-danger">Xóa tài khoản</h2>

<h4>Bạn có chắc chắn muốn xóa tài khoản này không?</h4>

<table class="table table-bordered">
    <tr>
        <th>Họ và tên</th>
        <td>@Model.NatFullName</td>
    </tr>
    <tr>
        <th>Email</th>
        <td>@Model.NatEmail</td>
    </tr>
    <tr>
        <th>Số điện thoại</th>
        <td>@Model.NatPhone</td>
    </tr>
    <tr>
        <th>Ảnh đại diện</th>
        <td>
            @if (!string.IsNullOrEmpty(Model.NatAvatar))
            {
                <img src="@Model.NatAvatar" width="80" height="80" class="rounded" alt="Avatar" />
            }
            else
            {
                <span>Chưa có ảnh</span>
            }
        </td>
    </tr>
</table>

<form asp-action="NatDelete" method="post">
    <input type="hidden" asp-for="NatId" />
    <button type="submit" class="btn btn-danger">Xác nhận xóa</button>
    <a asp-action="NatIndex" class="btn btn-secondary">Hủy</a>
</form>
