@model Natlesson10.Models.Publisher
@{
    ViewData["Title"] = "Chỉnh sửa nhà xuất bản";
}

<div class="container mt-4">
    <h2 class="text-primary mb-3">
        <i class="bi bi-pencil-fill me-1 text-warning"></i> @ViewData["Title"]
    </h2>
    <hr />

    <div class="row justify-content-center">
        <div class="col-md-6">
            <form asp-action="Edit" method="post" class="shadow p-4 rounded bg-light border border-warning-subtle">
                <!-- Hiển thị lỗi -->
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                <input type="hidden" asp-for="PublisherId" />

                <!-- Tên nhà xuất bản -->
                <div class="form-floating mb-3">
                    <input asp-for="PublisherName" class="form-control" placeholder="Tên nhà xuất bản" />
                    <label asp-for="PublisherName"></label>
                    <span asp-validation-for="PublisherName" class="text-danger"></span>
                </div>

                <!-- Điện thoại -->
                <div class="form-floating mb-3">
                    <input asp-for="Phone" class="form-control" placeholder="Điện thoại" />
                    <label asp-for="Phone"></label>
                    <span asp-validation-for="Phone" class="text-danger"></span>
                </div>

                <!-- Địa chỉ -->
                <div class="form-floating mb-3">
                    <input asp-for="Address" class="form-control" placeholder="Địa chỉ" />
                    <label asp-for="Address"></label>
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>

                <!-- Nút hành động -->
                <div class="d-flex justify-content-between mt-4">
                    <a asp-action="Index" class="btn btn-outline-secondary shadow-sm">
                        <i class="bi bi-arrow-left-circle"></i> Quay lại
                    </a>
                    <button type="submit" class="btn btn-warning text-white shadow-sm">
                        <i class="bi bi-save2"></i> Lưu thay đổi
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
