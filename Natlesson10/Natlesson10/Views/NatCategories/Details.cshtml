@model Natlesson10.Models.Category

@{
    ViewData["Title"] = "Chi tiết danh mục";
}

<h1 class="mt-4 mb-4 text-primary">@ViewData["Title"]</h1>

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card border-primary shadow-sm">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0">Thông tin danh mục</h5>
            </div>
            <div class="card-body">
                <dl class="row mb-0">
                    <dt class="col-sm-4 text-end fw-semibold">
                        @Html.DisplayNameFor(model => model.CategoryName)
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.CategoryName)
                    </dd>
                </dl>
            </div>
            <div class="card-footer bg-light d-flex justify-content-end">
                <a asp-action="Edit" asp-route-natId="@Model?.CategoryId" class="btn btn-outline-warning me-2">
                    <i class="bi bi-pencil-square"></i> Chỉnh sửa
                </a>
                <a asp-action="NatIndex1" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left-circle"></i> Quay lại danh sách
                </a>
            </div>
        </div>
    </div>
</div>
