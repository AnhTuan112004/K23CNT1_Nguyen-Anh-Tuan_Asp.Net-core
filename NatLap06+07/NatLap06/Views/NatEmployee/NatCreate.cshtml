@model NatLap06.Models.NatEmployee

@{
    ViewData["Title"] = "Thêm mới nhân viên";
}

<h2>Thêm mới nhân viên</h2>

<form asp-action="NatCreateSubmit" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>  <!-- Hiển thị tổng lỗi -->

    <div class="form-group">
        <label asp-for="NatName"></label>
        <input asp-for="NatName" class="form-control" />
        <span asp-validation-for="NatName" class="text-danger"></span>  <!-- Hiển thị lỗi riêng từng trường -->
    </div>

    <div class="form-group">
        <label asp-for="NatBirthDay"></label>
        <input asp-for="NatBirthDay" type="date" class="form-control" />
        <span asp-validation-for="NatBirthDay" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="NatEmail"></label>
        <input asp-for="NatEmail" class="form-control" />
        <span asp-validation-for="NatEmail" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="NatPhone"></label>
        <input asp-for="NatPhone" class="form-control" />
        <span asp-validation-for="NatPhone" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="NatSalary"></label>
        <input asp-for="NatSalary" type="number" class="form-control" />
        <span asp-validation-for="NatSalary" class="text-danger"></span>
    </div>

    <div class="form-check">
        <input asp-for="NatStatus" type="checkbox" class="form-check-input" />
        <label asp-for="NatStatus" class="form-check-label"></label>
    </div>

    <br />
    <button type="submit" class="btn btn-success">Lưu</button>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
