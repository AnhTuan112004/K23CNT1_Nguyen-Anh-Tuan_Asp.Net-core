@model NguyenAnhTuan_2310900113.Models.NatEmployee

@{
    ViewData["Title"] = "Xóa sinh viên";
}

<div class="container mt-4">
    <h2 class="text-danger mb-3">
        <i class="bi bi-trash3-fill me-1"></i> @ViewData["Title"]
    </h2>
    <hr />

    <!-- Cảnh báo -->
    <div class="alert alert-warning">
        <strong>Bạn có chắc chắn muốn xóa nhân viên sau?</strong>
    </div>

    <!-- Thông tin nhân viên -->
    <dl class="row">
        <dt class="col-sm-3">Họ tên</dt>
        <dd class="col-sm-9">@Model.NatEmpName</dd>

        <dt class="col-sm-3">Trình độ</dt>
        <dd class="col-sm-9">@Model.NatEmpLevel</dd>

        <dt class="col-sm-3">Ngày bắt đầu</dt>
        <dd class="col-sm-9">
            @if (Model.NatEmpStartDate.HasValue)
            {
                @Model.NatEmpStartDate.Value.ToString("dd/MM/yyyy", System.Globalization.CultureInfo.InvariantCulture)
            }
            else
            {
                <span>Không có</span>
            }
        </dd>

        <dt class="col-sm-3">Trạng thái</dt>
        <dd class="col-sm-9">
            @if (Model.NatEmpStatus.GetValueOrDefault())
            {
                <span class="badge bg-success">Hiển thị</span>
            }
            else
            {
                <span class="badge bg-secondary">Ẩn</span>
            }
        </dd>
    </dl>

    <!-- Nút xác nhận -->
    <form asp-action="NatDelete" method="post">
        <input type="hidden" asp-for="NatEmpId" />
        <button type="submit" class="btn btn-danger me-2">
            <i class="bi bi-trash-fill"></i> Xác nhận xóa
        </button>
        <a asp-action="NatIndex" class="btn btn-secondary">
            <i class="bi bi-arrow-left-circle"></i> Quay lại
        </a>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
